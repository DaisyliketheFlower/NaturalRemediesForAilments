
@model Ailment

<h2>Create a New Ailment</h2>

@using (Html.BeginForm("InsertAilmentsToDatabase", "Ailment", "Post"))
 {
    <input asp-for="Id" type="hidden" value="" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <label asp-for="Price" class="control-label">Price</label>
    <input type="number" step="0.01" name="Price" class="form-control" />

    <input type="submit" value="Create Ailment" class="btn btn-primary" />

    <div class="form-group">
        <label for="">Select an Ailment</label>
        <select class="form-control" name="Id" value="">
            @foreach(var item in Model.GetAilments)
            {
            <option value="@item.Id">@item.Id @item.Name </option>
            }
        </select>
    </div>

    <input type="submit" value="Create Ailment" class="btn btn-primary"/>
 }

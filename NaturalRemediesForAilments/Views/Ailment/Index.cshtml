            </div>
            <br />

            <div class="Cold Sore">
                <h2>Cold Sore</h2>
                <img src="images/Cold Sore.jpg" alt="Cold Sore" />
                <p>@item.Price</p>
                <p>@item.Remedies</p>
            </div>






    }


    <style>

        .display-4 {
            border: solid;
            background-color: red;
        }

        body {
            background-image: url(images/herbs.jpg);
        }


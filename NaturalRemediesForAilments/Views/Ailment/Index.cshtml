            <td>
                @Html.DisplayFor(modelItem => item.Remedies)
            </td>
        </tr>
    </table>







    {
        <div class="Diarrhea">
                <h2>Diarrhea</h2>
                <img src="images/bananacoconut.jpg" alt="Diarrhea" />
